				"zh_TW-json/Hobby_mapping.json",
				"zh_TW-json/skill_name_mapping.json",
				"zh_TW-json/skill_Desc_mapping.json",
				"zh_TW-json/furniture_name_mapping.json",
				"zh_TW-json/furniture_Desc_mapping.json",
				"zh_TW-json/item_name_mapping.json",
				"zh_TW-json/item_Desc_mapping.json",
				"zh_TW-json/equipment_Desc_mapping.json",
				"zh_TW-json/equipment_name_mapping.json",
				"zh_TW-json/stages_name_mapping.json",
				"zh_TW-json/stages_Event_mapping.json",
				"zh_TW-json/TacticRole.json",
