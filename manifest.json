{
	"manifest_version": 3,
	"name": "Arona.ai Translator",
	"version": "0.0.5",
	"description": "把Arona.ai翻譯成中文與日文",
	"default_locale": "zh_TW",
	"permissions": [
		"activeTab",
		"storage"
	],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://arona.ai/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "aaaa50306@gmail.com"
		}
	},
	"web_accessible_resources": [
		{
			"resources": [
				"translationWorker.js",
				"zh_TW-json/dictionary.json",
				"zh_TW-json/students_mapping.json",
				"zh_TW-json/Event.json",
				"zh_TW-json/Club.json",
				"zh_TW-json/School.json",
				"zh_TW-json/CharacterSSRNew.json",
				"zh_TW-json/otherstu.json",
