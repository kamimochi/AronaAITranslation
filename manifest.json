{
  "manifest_version": 3,
  "name": "Arona.ai Translator(中文化)",
  "version": "0.0.2",
  "description": "把Arona.ai翻譯成中文",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://arona.ai/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "json/dictionary.json",
        "json/students_mapping.json",
        "json/Event.json",
        "json/Club.json",
        "json/School.json",
        "json/CharacterSSRNew.json",
        "json/otherstu.json",
        "json/FamilyName_mapping.json",
        "json/Hobby_mapping.json",
        "json/skill_name_mapping.json",
        "json/skill_Desc_mapping.json",
        "json/furniture_name_mapping.json",
        "json/furniture_Desc_mapping.json",
        "json/item_name_mapping.json",
        "json/item_Desc_mapping.json",
        "json/equipment_Desc_mapping.json",
        "json/equipment_name_mapping.json",
        "json/stages_name_mapping.json",
        "json/stages_Event_mapping.json",
        "fonts/PerfectDOSVGA437.ttf",
        "fonts/U-OTF-ShinMGoUpr-DeBold.otf",
        "fonts/U-OTF-ShinMGoUpr-Medium.otf"
      ],
      "matches": ["https://arona.ai/*"]
    }
  ]
}
